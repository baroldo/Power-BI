DynamicCumulativeMarginPercent = 
VAR CurrentPercentile = MAX('PercentileAxis'[Percentage of Merchants (%)])

-- Step 1: Get the selected field from the field parameter
VAR SelectedGroupField =
    SELECTEDVALUE('GroupBySelector'[GroupBySelector])

-- Step 2: Create a virtual table with one row per customer and their group value and margin
VAR BaseTable =
    ADDCOLUMNS(
        ALLSELECTED(MARGIN_DECILIES),
        "GroupValue", 
            SWITCH(
                TRUE(),
                SelectedGroupField = "MARGIN_DECILIES[Category]", MARGIN_DECILIES[Category],
                SelectedGroupField = "MARGIN_DECILIES[Region]", MARGIN_DECILIES[Region],
                SelectedGroupField = "MARGIN_DECILIES[Segment]", MARGIN_DECILIES[Segment],
                BLANK()
            ),
        "Margin", MARGIN_DECILIES[MARGIN_$]
    )

-- Step 3: Add percentile ranking per group
VAR RankedTable =
    ADDCOLUMNS(
        BaseTable,
        "CustomerPercentile",
        VAR ThisGroup = [GroupValue]
        RETURN
            ROUND(
                DIVIDE(
                    RANKX(
                        FILTER(BaseTable, [GroupValue] = ThisGroup),
                        [Margin],
                        ,
                        DESC,
                        DENSE
                    ),
                    COUNTROWS(FILTER(BaseTable, [GroupValue] = ThisGroup))
                ) * 100,
                0
            )
    )

-- Step 4: Calculate cumulative margin for customers up to current percentile in their group
VAR CumulativeMargin =
    SUMX(
        FILTER(RankedTable, [CustomerPercentile] <= CurrentPercentile),
        [Margin]
    )

-- Step 5: Total margin per group (for %)
VAR TotalMargin =
    SUMX(RankedTable, [Margin])

RETURN
    DIVIDE(CumulativeMargin, TotalMargin)