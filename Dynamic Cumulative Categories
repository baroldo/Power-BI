DynamicCumulativeMarginPercent = 
VAR CurrentPercentile = MAX('PercentileAxis'[Percentage of Merchants (%)])

-- Step 1: Detect which group field is selected
VAR IsCategory = ISFILTERED(MARGIN_DECILIES[Category])
VAR IsRegion   = ISFILTERED(MARGIN_DECILIES[Region])
VAR IsSegment  = ISFILTERED(MARGIN_DECILIES[Segment])

-- Step 2: Create virtual table based on selected group
VAR BaseTable =
    ADDCOLUMNS(
        ALLSELECTED(MARGIN_DECILIES),
        "GroupValue", 
            SWITCH(
                TRUE(),
                IsCategory, MARGIN_DECILIES[Category],
                IsRegion, MARGIN_DECILIES[Region],
                IsSegment, MARGIN_DECILIES[Segment],
                BLANK()
            ),
        "Margin", MARGIN_DECILIES[MARGIN_$]
    )

-- Step 3: Rank customers by margin within their group
VAR RankedTable =
    ADDCOLUMNS(
        BaseTable,
        "CustomerPercentile",
        VAR ThisGroup = [GroupValue]
        RETURN
            ROUND(
                DIVIDE(
                    RANKX(
                        FILTER(BaseTable, [GroupValue] = ThisGroup),
                        [Margin],
                        ,
                        DESC,
                        DENSE
                    ),
                    COUNTROWS(FILTER(BaseTable, [GroupValue] = ThisGroup))
                ) * 100,
                0
            )
    )

-- Step 4: Cumulative margin up to percentile
VAR CumulativeMargin =
    SUMX(
        FILTER(RankedTable, [CustomerPercentile] <= CurrentPercentile),
        [Margin]
    )

-- Step 5: Total margin in group
VAR TotalMargin =
    SUMX(RankedTable, [Margin])

RETURN
    DIVIDE(CumulativeMargin, TotalMargin)