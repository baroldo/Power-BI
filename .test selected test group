Selected Group Test =
VAR SelectedGroup = SELECTEDVALUE('LegendSelector'[Value])

RETURN
SWITCH(
    SelectedGroup,
    "INDUSTRY", SELECTEDVALUE('MARGIN_DECILIES'[INDUSTRY], "No Industry"),
    "PROD_CAT", SELECTEDVALUE('MARGIN_DECILIES'[PROD_CAT], "No Prod_Cat"),
    "SECTOR_DESC", SELECTEDVALUE('MARGIN_DECILIES'[SECTOR_DESC], "No Sector"),
    "All"
)
